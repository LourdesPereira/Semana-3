<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="100dp">

    <ImageView
        android:id="@+id/image_central"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_img_dogs"
        android:layout_marginTop="@dimen/top_img_dogs"
        android:layout_marginStart="0dp"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/hueso_amarillo"
        android:layout_width="@dimen/width_hueso_yelow"
        android:layout_height="@dimen/height_hueso_yelow"
        android:layout_marginStart="300dp"
        android:layout_marginTop="@dimen/top_hueso_yelow"
        android:onClick="OnClickHuesoAmarillo"
        android:src="@drawable/hueso_amarillo"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/hueso_blanco"
        android:layout_width="@dimen/width_hueso_white"
        android:layout_height="@dimen/height_hueso_white"
        android:layout_marginStart="@dimen/left_hueso_white"
        android:layout_marginTop="@dimen/top_hueso_white"
        android:onClick="OnClickHuesoBlanco"
        android:src="@drawable/hueso_blanco"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/dog_name"
        android:layout_width="@dimen/width_txt_dogs"
        android:layout_height="@dimen/height_txt_dogs"
        android:layout_marginStart="@dimen/margin_left_name_dog"
        android:layout_marginTop="@dimen/margin_top_name_dog"
        android:text="@string/text_name_dog"
        android:textSize="@dimen/size_name_dog" />

    <TextView
        android:id="@+id/likes"
        android:layout_width="@dimen/width_likes"
        android:layout_height="@dimen/height_likes"
        android:layout_marginStart="250dp"
        android:layout_marginTop="@dimen/margin_top_likes"
        android:gravity="center"
        android:text="0"
        android:textSize="@dimen/size_num_likes" />




</androidx.cardview.widget.CardView>
